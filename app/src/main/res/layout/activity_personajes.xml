<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PersonajesActivity">

    <TextView
        android:id="@+id/tvTituloPersonajes"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="128dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Personajes" />

    <TextView
        android:id="@+id/tvNombreEpisodio"
        android:layout_width="131dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewEpisode"
        app:layout_constraintEnd_toStartOf="@+id/tvEpisodio"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloPersonajes"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Nombre Episodio" />

    <TextView
        android:id="@+id/tvEpisodio"
        android:layout_width="154dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewEpisode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloPersonajes"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Episodio" />

    <Button
        android:id="@+id/btVolverPersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/volver"
        app:layout_constraintEnd_toStartOf="@+id/tvTituloPersonajes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPersonaje"
        android:layout_width="411dp"
        android:layout_height="530dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>